@model CNPM_ktxUtc2Store.Models.Adress

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Adress</h4>
<hr />
<div class="address-all">
        <div class="address-form">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="address-details">
                    <label asp-for="homeAdress" class="control-label">Đường/Thôn/Xóm-Xã</label>
                    <input asp-for="homeAdress" class="form-control" />
                    <span asp-validation-for="homeAdress" class="text-danger"></span>
                </div>
                <div class="address-details">
                    <label asp-for="villageAdress" class="control-label">Quận/Huyện</label>
                    <input asp-for="villageAdress" class="form-control" />
                    <span asp-validation-for="villageAdress" class="text-danger"></span>
                </div>
                <div class="address-details">
                    <label asp-for="districAdress" class="control-label">Tỉnh/Thành Phố</label>
                    <input asp-for="districAdress" class="form-control" />
                    <span asp-validation-for="districAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-wrap" />
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Trở về</a>
        </div>

</div>



