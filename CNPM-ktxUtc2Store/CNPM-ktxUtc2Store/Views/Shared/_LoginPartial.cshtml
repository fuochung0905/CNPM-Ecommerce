@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="login-wrap">
    
@if (SignInManager.IsSignedIn(User))
{
    <li class="login-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello <span id="username">@User.Identity?.Name</span>
            </a>
    </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="login-item">
                <a class="nav-link text-white" href="/Admin/Home">
                    <span>Quản lí</span>
                </a>
            </li>
        }
        <li class="login-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
      

    
    <li class="login-item">
            <a class="" asp-area="Identity" asp-page="/Account/Login"> <i class="fa-solid fa-circle-user"></i> Đăng nhập</a>
    </li>
    <li class="login-item">
            <a class="" asp-area="Identity" asp-page="/Account/Login"> <i class="fa-solid fa-phone"></i> Liên hệ</a>
    </li>
}
</ul>
