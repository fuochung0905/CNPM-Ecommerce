@model CNPM_ktxUtc2Store.Models.shoppingCart


<div style="width:90%; margin:auto">
    @if (Model != null && Model.cartDetails != null && Model.cartDetails.Count > 0)
    {
        <h3>Gio hang cua toi</h3>
        @foreach (var item in Model.cartDetails)
        {
            <table class="table table-bordered">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Ảnh</th>
                    <th>Số lượng</th>
                    <th>Tổng giá</th>
                    <th>Khác</th>
                    <th>Đặt hàng</th>
                </tr>

                <tr>
                    <td>@item.product.productName</td>
                    <td>
                        <img src="/images/@item.product.imageUrl" style="width:80px;height:100px">
                    </td>
                    <td>@item.quantity</td>
                    <td>@item.quantity*@item.product.price</td>
                    <td>
                        <a class="btn btn-info" href="/Cart/AddItem?productId=@item.productId&&redirect=1 ">+</a>
                        <a class="btn btn-info" href="/Cart/Remove?productId=@item.productId">-</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/UserOrder/Order">Đặt hàng</a>
                    </td>
                </tr>

            </table>
            <div class="my-2">
                <h5>Total:</h5>
                @(Model.cartDetails.Select(item => item.product.price * item.quantity).Sum())

            </div>
            <div class="my-2">
                <a class="btn btn-primary" href="/Cart/checkout">CheckOut</a>

            </div>
        }

    }
</div>

