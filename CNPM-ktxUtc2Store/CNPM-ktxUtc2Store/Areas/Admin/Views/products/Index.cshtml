@model CNPM_ktxUtc2Store.Areas.Admin.dto.productDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Trang chủ sản phẩm</h1>

<p>
    <a asp-action="Create">Thêm sản phẩm mới</a>
</p>

<div class="admin-product">
    <div class="admin-product-name">   </div>
    <div class="admin-product-name">Tên SP</div>
    <div class="admin-product-image">Ảnh</div>
    <div class="admin-product-price">Giá</div>
    <div class="admin-product-discount">Giảm giá</div>
    <div class="admin-product-quanty">Số lượng</div>
    <div class="admin-product-quanty">Kích thước</div>
    <div class="admin-product-quanty">Màu</div>
    <div class="admin-product-descript">Mô tả</div>
    <div class="admin-product-controle">Thao tác</div>
</div>
<!------------------------------------------------------------------------------>
@foreach (var item in Model.products) {
    <hr />
<div class="admin-product">
    <div>
        <label>
            <input asp-for="Id" type="radio"
                    value="@item.Id"  />
        </label>
    </div>
    <div class="admin-product-name">
        @item.productName
    </div>
    <div class="admin-product-image">
        <div class="hover-img">
                <i class="fa-solid fa-eye"></i>
                <div class="show-img"><img src="/images/@item.imageUrl"></div>
        </div>
    </div>
    <div class="admin-product-price">
            @item.price
    </div>
    <div class="admin-product-discount">
            @item.oldprice
    </div>
    <div class="admin-product-quanty">
            @item.qty_inStock
    </div>
        <div class="admin-product-quanty">
            @foreach (var i in Model.productVariation)
            {
                if (i.productId == item.Id)
                {
                    @if (i.variation.name == "size")
                    {
                        @i.variation.value
                    }
                }
            }
        </div>
        <div class="admin-product-quanty">
            @foreach (var i in Model.productVariation)
            {
                if (i.productId == item.Id)
                {
                    @if (i.variation.name == "color")
                    {
                        @i.variation.value
                    }
                }
            }
        </div>

       
        <div class="admin-product-descript">
        <div class="admin-product-descript-tooltip">
                <a class="hover-show-descript">Xem</a>
                <div class="show-descript">
                    @item.description
                </div>
        </div>    
    </div>
    <div class="admin-product-controle">
            <a asp-action="AddVariation" asp-route-id="@item.Id">Cập nhật biến thể</a> |
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
</div>
}