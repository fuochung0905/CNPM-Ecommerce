@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>




<div style="display: flex; justify-content: center">
    <div class="containersignin">

        <form id="account" method="post">
            <h2>Login</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-input ">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" username aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-input ">
                <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div>
                <button id="submit" type="submit" class="btsubmit">Đăng nhập</button>
            </div>

            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí</a>
                </p>

            </div>
        </form>
    </div>

</div>




           
        

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
